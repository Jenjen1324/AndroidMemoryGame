<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Edit your set"
        android:id="@+id/text_ownset_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:textSize="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="SetName"
        android:id="@+id/text_setname"
        android:textSize="30dp"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/text_ownset_title"
        android:layout_toLeftOf="@+id/button_save"
        android:layout_toStartOf="@+id/button_save" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save set"
        android:id="@+id/button_save"
        android:textSize="20dp"
        android:layout_below="@+id/text_setname"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#04fe00"
        android:minWidth="150dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="delete set"
        android:id="@+id/button_delete"
        android:background="#fa020a"
        android:textSize="20dp"
        android:minWidth="150dp"
        android:layout_below="@+id/text_setname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/grid_set"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button_save"
        android:numColumns="6" />

</RelativeLayout>