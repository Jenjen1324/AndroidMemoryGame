<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Attack"
        android:id="@+id/button_sp"
        android:minWidth="250dp"
        android:minHeight="50dp"
        android:textSize="25dp"
        android:background="#6fa4ff"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/button_mp"
        android:layout_alignStart="@+id/button_mp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 versus 1"
        android:id="@+id/button_mp"
        android:layout_below="@+id/button_sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:minHeight="50dp"
        android:minWidth="250dp"
        android:textSize="25dp"
        android:background="#6fa4ff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sets"
        android:id="@+id/button_sets"
        android:layout_below="@+id/button_mp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:minWidth="250dp"
        android:minHeight="50dp"
        android:textSize="25dp"
        android:background="#6fa4ff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Memory"
        android:id="@+id/text_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:minHeight="100dp"
        android:minWidth="250dp"
        android:textSize="100dp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@android:drawable/ic_lock_silent_mode_off"
        android:layout_toEndOf="@+id/button_sp"
        android:layout_marginBottom="130dp"
        android:layout_alignBottom="@+id/text_title"
        android:layout_toRightOf="@+id/button_sp" />
</RelativeLayout>